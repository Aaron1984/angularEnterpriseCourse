{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lib/auth/data-access": ["libs/auth/data-access/src/index.ts"],
      "@lib/auth/domain": ["libs/auth/domain/src/index.ts"],
      "@lib/auth/feature": ["libs/auth/feature/src/index.ts"],
      "@lib/shared/data-access": [
        "libs/shared/shared-data-access/src/index.ts"
      ],
      "@lib/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@lib/shared/util": ["libs/shared/util/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
